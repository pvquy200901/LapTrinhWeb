@model LapTrinhWeb.Models.HomeModel
@{
    ViewBag.Title = "shopKid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Cửa hàng</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<!-- Product Shop Section Begin -->
<section class="product-shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                <div class="filter-widget">
                    <h4 class="fw-title">Thể Loại</h4>
                    <ul class="filter-catagories">
                        <li><a href="@Url.Action("shopMen","Home")">Quần áo nam</a></li>
                        <li class="active"><a href="@Url.Action("shopWomen","Home")">Quần áo nữ</a></li>

                        <li><a href="@Url.Action("shopKid","Home")">Quần áo trẻ em</a></li>

                    </ul>
                </div>

                <div class="filter-widget">
                    <h4 class="fw-title">Giá</h4>
                    <div class="filter-range-wrap">
                        <div class="range-slider">
                            <div class="price-input">
                                <input type="text" id="minamount">
                                <input type="text" id="maxamount">
                            </div>
                        </div>
                        <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                             data-min="33" data-max="98">
                            <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                        </div>
                    </div>
                    <a href="#" class="filter-btn">Tìm kiếm</a>
                </div>

            </div>
            <div class="col-lg-9 order-1 order-lg-2">

                <div class="product-list">
                    <div class="row">
                        @foreach (var item in Model.ListProduct)
                        {
                            if (item.CategoryId == 3)
                            {
                                <div class="col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="pi-pic">
                                            <img src="~/Content/img/@item.Avatar" alt="">
                                            @if (item.TypeId == 1)
                                            {
                                                <div class="sale pp-sale">Sale</div>
                                            }
                                            <div class="icon">
                                                <i class="icon_heart_alt"></i>
                                            </div>
                                            <ul>
                                                <li class="quick-view"><a href="@Url.Action("Detail","Product",new { Id = item.Id})">Xem chi tiết</a></li>
                                            </ul>
                                        </div>
                                        <div class="pi-text">
                                            <a href="#">
                                                <h5>@item.Name</h5>
                                            </a>
                                            <div class="product-price">
                                                @item.PriceDiscount
                                                <span>@item.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }


                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

