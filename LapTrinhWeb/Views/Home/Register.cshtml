@model LapTrinhWeb.DbContext.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Đăng kí</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Đăng kí</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <form action="#">
                            <div class="group-input">
                                <label for="username">Nhập tên đăng nhập *</label>
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @id = "username" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="group-input">
                                <label for="pass">Mật khẩu *</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "pass" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                            </div>
                            <div class="group-input">
                                <label for="con-pass">Nhập lại mật khẩu *</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "con-pass" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="group-input">
                                <label for="name">Nhập họ và tên *</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @id = "name" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="group-input">
                                <label for="email">Nhập Email *</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @id = "email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="group-input">
                                <label for="phone">Nhập số điện thoại *</label>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "phone" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="group-input">
                                <label for="address">Nhập địa chỉ *</label>
                                @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @id = "address" } })
                                @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="site-btn register-btn">Đăng kí</button>
                        </form>
                    }
                    <div class="switch-login">
                        @Html.ActionLink("Hoặc đăng nhập", "Login", "Home", new { @class = "or-login" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
