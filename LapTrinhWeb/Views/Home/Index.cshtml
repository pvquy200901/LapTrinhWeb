                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Section End -->
<!-- Women Banner Section Begin -->
<section class="women-banner spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <div class="product-large set-bg" data-setbg="/Content/img/products/women-large.jpg">
                    <h2>Women’s</h2>
                    <a href="@Url.Action("shopWomen","Home")">Xem Thêm</a>
                </div>
            </div>
            <div class="col-lg-8 offset-lg-1">
                <div class="filter-control">
                    <ul>
                        <li class="active">Clothings</li>
                    </ul>
                </div>
                <div class="product-slider owl-carousel">

                    @foreach (var item in Model.ListProduct)
                    {
                        if (item.CategoryId == 2)
                        {
                            <div class="product-item">
                                <div class="pi-pic">
                                    <img src="~/Content/img/@item.Avatar" alt="">
                                    @if (item.TypeId == 1)
                                    {
                                        <div class="sale">Sale</div>
                                    }
                                    <div class="icon">
                                        <i class="icon_heart_alt"></i>
                                    </div>
                                    <ul>
                                        <li class="quick-view"><a href="@Url.Action("Detail","Product",new { Id = item.Id})">Xem chi tiết</a></li>
                                        
                                    </ul>
                                </div>
                                <div class="pi-text">
                                    <a href="#">
                                        <h5>@item.Name</h5>
                                    </a>
                                    <div class="product-price">
                                        @item.Price
                                        <span>@item.PriceDiscount</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Women Banner Section End -->
<!-- Deal Of The Week Section Begin-->
<section class="deal-of-week set-bg spad" data-setbg="/Content/img/time-bg.jpg">
    <div class="container">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h2>Deal Of The Week</h2>
                <p>
                    Deal sập sàn, nhanh tay đặt hàng<br />khuyến mãi hàng ngàn quà tặng
                </p>
                <div class="product-price">
                    200.000 VNĐ
                    <span>/ HanBag</span>
                </div>
            </div>
            <div class="countdown-timer" id="countdown">
                <div class="cd-item">
                    <span>56</span>
                    <p>Days</p>
                </div>
                <div class="cd-item">
                    <span>12</span>
                    <p>Hrs</p>
                </div>
                <div class="cd-item">
                    <span>40</span>
                    <p>Mins</p>
                </div>
                <div class="cd-item">
                    <span>52</span>
                    <p>Secs</p>
                </div>
            </div>
            @Html.ActionLink("Shop Now", "Shop", "Home", new { @class = "primary-btn" })
        </div>
    </div>
</section>
<!-- Deal Of The Week Section End -->
