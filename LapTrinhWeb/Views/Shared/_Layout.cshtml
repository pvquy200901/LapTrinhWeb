<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Fashi Template">
    <meta name="keywords" content="Fashi, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>QĐN | Store</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>

<body>
    <!-- Page Preloder -->
    <style>
        .logout {
            color: black;
        }

            .logout :hover {
                color: black;
            }
    </style>

    <!-- Header Section Begin -->
    <header class="header-section">

        <div class="container">
            <div class="inner-header">
                <div class="row">
                    <div class="col-lg-2 col-md-2">
                        <div class="logo">
                            <a href="@Url.Action("Index","Home")">
                                <img src="~/Content/img/Logo.jpg" alt="" width="165" height="50" />

                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="advanced-search">
                            <div class="input-group">
                                <input type="text" placeholder="Nhập đồ bạn muốn tìm?">
                                <button type="button"><i class="ti-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 text-right col-md-3">
                        <ul class="nav-right">
                            @if (Session["idUser"] != null && Session["isAdmin"] == null)
                            {
                                <li class="nav-right-login">
                                    Hello @Session["FullName"]
                                </li>
                                <li class="nav-right-login">
                                    <a class="logout" href="~/Home/Logout">Logout</a>
                                </li>
                            }
                            @if (Session["isAdmin"] != null)
                            {
                                <li class="nav-right-login"> <a href="~/Admin/Home/Index">Trang quản trị</a></li>
                                <li class="nav-right-login">
                                    <a href="~/Home/Logout">Logout</a>
                                </li>
                            }
                            else if(Session["idUser"] == null)
                            {
                                <li>
                                    @Html.ActionLink("Đăng Nhập", "Login", "Home", new { @class = "nav-right-login" })
                                </li>
                                <li>
                                    @Html.ActionLink("Đăng Kí", "Register", "Home", new { @class = "nav-right-login" })
                                </li>

                            }


                            <li class="cart-icon">
                                <a href="@Url.Action("ShoppingCart","Home")" class="nav-right-login">
                                    <i class="icon_bag_alt"></i>
                                    <span id="CartCount">@Session["count"]</span>
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-item">
            <div class="container">
                <div class="nav-depart">
                    <div class="depart-btn">
                        <i class="ti-menu"></i>
                        <span>Danh Mục Sản Phẩm</span>
                        <ul class="depart-hover">
                            <li><a href="@Url.Action("shopMen","Home")">Quần áo nam</a></li>
                            <li><a href="@Url.Action("shopWomen","Home")">Quần áo nữ</a></li>


                            <li><a href="@Url.Action("shopKid","Home")">Quần áo trẻ em</a></li>
                        </ul>
                        <i class="arrow_carrot-down"></i>
                    </div>
                </div>
                <nav class="nav-menu mobile-menu">
                    <ul>
                        <li>
                            @Html.ActionLink("Trang Chủ", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Cửa Hàng", "Shop", "Home")
                        </li>
                        <li>

                            @Html.ActionLink("Ưu Đãi Hot", "Hot", "Home")
                        </li>

                        <li>
                            @Html.ActionLink("Liên Hệ", "Contact", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Chính Sách", "ChinhSach", "Home")

                        </li>


                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
    </header>
    <!-- Header End -->
    @RenderBody();
    <!-- Hero Section Begin -->

    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="footer-left">
                        <div class="footer-logo">
                            <a href="@Url.Action("Index","Home")"><img src="~/Content/img/Logo.jpg" alt="" width="165" height="50" /></a>
                        </div>
                        <ul>
                            <li>Địa chỉ: Hồ Chí Minh</li>
                            <li>Điện thoại: 09131366242</li>
                            <li>Email: quyhongq@gmail.com</li>
                        </ul>

                    </div>
                </div>
                <div class="col-lg-2 offset-lg-1">
                    <div class="footer-widget">
                        <h5>Về Chúng Tôi</h5>
                        <ul>
                            <li><a href="#">Câu chuyện thương hiệu</a></li>
                            <li><a href="#">Tin tức</a></li>
                            <li><a href="#">Đôi cánh yêu thương</a></li>
                            <li><a href="#">Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="footer-widget">
                        <h5>Chính Sách Bán Hàng</h5>
                        <ul>
                            <li><a href="#">Chính sách đổi hàng</a></li>
                            <li><a href="#">Chính sách bảo hành</a></li>
                            <li><a href="#">Chính sách hội viên</a></li>
                            <li>
                                <a href="#">
                                    Chính sách giao nhận

                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="newslatter-item">
                        <h5>THEO DÕI BẢN TIN CỦA CHÚNG TÔI</h5>
                        <form action="#" class="subscribe-form">
                            <input type="text" placeholder="Nhập Email của bạn">
                            <button type="button">Đăng kí</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/Scripts/js/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery-ui.min.js"></script>
    <script src="~/Scripts/js/jquery.countdown.min.js"></script>
    <script src="~/Scripts/js/jquery.nice-select.min.js"></script>
    <script src="~/Scripts/js/jquery.zoom.min.js"></script>
    <script src="~/Scripts/js/jquery.dd.min.js"></script>
    <script src="~/Scripts/js/jquery.slicknav.js"></script>
    <script src="~/Scripts/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/js/main.js"></script>
</body>

</html>